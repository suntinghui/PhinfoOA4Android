<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="#0c9cd0"
    android:padding="10dp" >

    <TextView
        android:id="@+id/nav_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_back"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/nav_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/more_add" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_toRightOf="@id/nav_back"
        android:layout_toLeftOf="@id/nav_btn"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/my_tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="待办"
            android:background="@drawable/rounded_frame_left_radius_selector"
            android:textColor="@drawable/selector_tabtext"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_tab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="待阅"
            android:layout_marginLeft="-2dp"
            android:textColor="@drawable/selector_tabtext"
            android:background="@drawable/frame_selector"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_tab3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="已办"
            android:layout_marginLeft="-2dp"
            android:textColor="@drawable/selector_tabtext"
            android:background="@drawable/frame_selector"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/my_tab4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:layout_marginLeft="-2dp"
            android:gravity="center"
            android:text="发起"
            android:textColor="@drawable/selector_tabtext"
            android:background="@drawable/rounded_frame_right_radius_selector"
            android:textSize="14sp" />
    </RadioGroup>

</RelativeLayout>