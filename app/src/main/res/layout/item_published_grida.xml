<?xml version="1.0" encoding="utf-8"?><com.heqifuhou.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:background="#ffffff"    android:orientation="vertical" >    <RelativeLayout        android:layout_width="fill_parent"        android:layout_height="fill_parent" >        <ImageView            android:layout_margin="8dp"            android:id="@+id/item_grida_image"            android:layout_width="fill_parent"            android:layout_height="fill_parent"            android:scaleType="centerCrop"            android:src="@drawable/default_img" >        </ImageView>        <ImageView            android:id="@+id/btn_del"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentRight="true"            android:layout_alignParentTop="true"            android:background="@drawable/delete_red" />    </RelativeLayout></com.heqifuhou.view.SquareLayout>