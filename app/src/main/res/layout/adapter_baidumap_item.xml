<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/my_item_selector">

    <ImageView
        android:id="@+id/adapter_baidumap_location_checked"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_checked"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/adapter_baidumap_location_checked"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/adapter_baidumap_location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[位置]"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/adapter_baidumap_location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>